<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/holo_blue_light"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@id/btn_ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/action_btn_back_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/iv_nt_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/default_icon_user"
            android:visibility="gone"
            app:civ_border_color="@android:color/holo_orange_light"
            app:civ_border_width="2dp" />

        <ImageView
            android:id="@id/iv_nt_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/action_btn_add_friend_selector"
            android:visibility="gone" />

        <TextView
            android:id="@id/tv_nt_validate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="发送"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20dp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@id/tv_nt_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="标题" />
</RelativeLayout>